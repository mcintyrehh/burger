<div class="container col-md-10 mx-auto rounded">
    <div class="row rounded burgers">
        <div class="col-md-4 text-center burgers-ready">
            <h2 class='mini-header'>Burgers to be eaten!</h2>
            <div>
                {{#each burgers}}
                <p> {{this.burger_name}} </p>
                {{/each}}
            </div>
        </div>
        <div class="col-md-4 text-center d-flex flex-column justify-content-center">
            <h2 class='mini-header'>Create a burger!</h2>
            <div class="user-input">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Burger McBurger">
                </div>
                <button type="button" class="btn btn-dark mx-auto">Craft Burger</button>
            </div>
        </div>
        <div class="col-md-4 text-center burgers-munched">
            <h2 class='mini-header'>Burgers munched!</h2>
            <div>
                {{#each burgers}}
                <p> {{this.burger_name}} </p>
                {{/each}}
            </div>
        </div>
    </div>
</div>
</div>